  <div id="id01" class="modal">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name),  html: {class: 'modal-content animate' }) do |f| %>
    <div class="imgcontainer">
      <img src="<%= asset_path('logo-sekolah.png') %>" alt="logo sekolah" class="avatar">
      <h2 id="caption">RAMADHAN BERSAMA SMK AL-IHSAN</h4>
      <%= content_tag(:div, flash[:error], :id => "flash_error") if flash[:error] %>
      <%= content_tag(:div, flash[:notice], :id => "flash_notice") if flash[:notice] %>
      <%= content_tag(:div, flash[:alert], :id => "flash_alert") if flash[:alert] %>
    </div>

    <div class="container">
      <div class="field">
        <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",  class: "form" , require: true%>
      </div>

      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password",placeholder: "Password", class: "form" %>
      </div>

      <div class="form-group">
        <div class="custom-control custom-checkbox small">
            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end %>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "Log in", class: "signup" %>
      </div>
      <%=  link_to "Sign Up", new_student_registration_path, :id => "links" %>
    </div>
  <% end %>
</div>