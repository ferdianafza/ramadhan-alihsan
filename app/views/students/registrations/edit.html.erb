<div id="id01" class="modal">
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <div class="imgcontainer">
      <!-- <img src="<%= asset_path('logo-sekolah.png') %>" alt="Avatar" class="avatar"> -->
      <% if current_student.avatar.attached? %>
          <%= image_tag url_for(current_student.avatar.variant(resize:"200x200")), class:"avatar" %>
      <% else %>
          <img src="<%= asset_path('avatar.jpg') %>" alt="avatar" heigth="200px" width="200px" style="border-radius: 20px;">
      <% end %>
    </div>

    <div class="container">
      <div class="field">
        <%= f.label :unggah_poto_profil %><br />
      <%= f.file_field :avatar %>
    </div>

    <div class="field">
      <%= f.text_field :firstname, autofocus: true, placeholder: "Nama Depan", class: "form" %>
    </div>

    <div class="field">
      <%= f.text_field :lastname, autofocus: true, placeholder: "Nama Belakang", class: "form" %>
    </div>

    <div class="field">
      <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form"  %>
    </div>

    <div class="action">
    <%= f.submit "Update", :class => "signup"  %>
    </div>
    </div>
  <% end %>
</div>