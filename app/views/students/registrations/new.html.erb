<div id="id01" class="modal">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),  html: {class: 'modal-content animate' }) do |f| %>
    <div class="imgcontainer">
      <img src="<%= asset_path('logo-sekolah.png') %>" alt="Avatar" class="avatar">
    </div>

    <div class="container">
      <div class="field">
    <%= f.select :major_id, Major.all.collect {|m| [ m.name, m.id ] }, { :include_blank => "Pilih Kelas anda" }, { :class => "custom-select form" } %>
  </div>

  <div class="field">
    <%= f.text_field :firstname, autofocus: true, placeholder: "Nama Depan", class: "form" %>
  </div>

  <div class="field">
    <%= f.text_field :lastname, autofocus: true, placeholder: "Nama Belakang", class: "form" %>
  </div>

  <div class="field">
    <%= f.text_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "form"  %>
  </div>


  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password (min 6 karakter)", class: "form"%>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password-confirmation", placeholder: "Konfirmasi Password" , class: "form" %>
  </div>

  <div class="actions">
    <%= f.submit "Daftar", :class => "signup" %>
  </div>
  <%=  link_to "Log in", new_student_session_path, :id => "links" %>
    </div>
  <% end %>
</div>